/* pages/my/index.wxss */
@import '../../icon/iconfont.wxss';

.hedaer_my {
  background-color: white;
  padding-top: 20rpx;
}

.user_img {
  width: 50%;
  height: 100%;
  overflow: hidden;
}

.user_img .userAvatarUrl {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
}

.footer_operation {
  height: 150rpx;
  padding: 0 10rpx;
  font-size: 12px;
  color: #444;
  margin-bottom: 24rpx;
  overflow: hidden;
  position: relative;
}

.user_info {
  height: 100%;
  width: 50%;
  color: white;
  font-size: 15px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
}

.user_name {
  font-weight: bold;
  margin-bottom: 20rpx;
  height: 50rpx;
  width: 100%;
}

.list_info {
  padding: 0 30rpx;
}

.list_content {
  width: 100%;
  height: 100%;
  color: #000;
  font-size: 12px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.name_list {
  margin: 14rpx 0;
}

.tnumber {
  color: #222;
  font-size: 14px;
}

.head_user {
  width: 89%;
  height: 300rpx;
  overflow: hidden;
  position: relative;
  margin: 0 auto;
  border-radius: 24rpx;
  background: -webkit-linear-gradient(top, rgba(95, 207, 255, 1) 0%, rgba(44, 160, 210, 1) 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

#main {
  width: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  margin-top: 24rpx;
  padding: 0;
}

.li {
  height: 88rpx;
  background-color: white;
  padding-left: 46rpx;
  padding-right: 20rpx;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.main_icon {
  margin-right: 26rpx;
  height: 100%;
  float: left;
}

.li_content {
  width: calc(100% - 130rpx);
  display: inline-block;
  font-size: 14px;
  color: #444;
  position: relative;
  height: 100%;
  border-bottom: #ebebeb 2px solid;
  line-height: 88rpx;
}

.li_content:after {
  content: "";
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -5px;
  width: 10px;
  height: 10px;
  border-right: 1px solid #888;
  border-bottom: 1px solid #888;
  transform: rotate(-45deg);
}
