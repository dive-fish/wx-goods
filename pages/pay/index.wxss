/* pages/pay/index.wxss */

.pay_box {
  padding: 30rpx 0;
  background-color: white;
}

.name {
  margin: 20rpx 0;
  text-align: center;
  color: #444;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.img_box {
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
}

.img_box image {
  width: 100%;
  height: 100%;
}

.money {
  color: #ec8f25;
  font-size: 16px;
  font-weight: 500;
}

.list {
  height: 100rpx;
  padding: 0 30rpx;
  color: #444;
  font-size: 14px;
  background-color: white;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
  position: relative;
  text-align: left;
}
.list_name{
  line-height: 100rpx;
}

.list_operation{
  height: 100%;
  float: right;
  flex-direction: row;
}
.list_operation image {
  width: 48rpx;
  height: 48rpx;
  overflow: hidden;
  border-radius: 50%;
}
.list_operation_num{
  padding: 0 40rpx;
}
.add_goods{
  margin-top: 40px;
  background-color: #45b7e8;
  font-weight: 400;
  color: white;
  width: 90% !important;
}
.pay {
  width: 90% !important;
  margin-top: 20px;
  color: white;
  background: springgreen
}