/* pages/my/opinion/opinion.wxss */

.opinion {
  padding: 29rpx 31rpx;
}

.textarea {
  height: 283rpx;
  font-size: 13px;
  color: #888;
  background-color: white;
  padding: 26rpx 34rpx;
  position: relative;
}

.textarea textarea {
  width: 100%;
  height: 100%;
}

.weui-textarea-counter {
  position: absolute;
  right: 25rpx;
  bottom: 20rpx;
  font-size: 14px;
}

.weui-cells {
  margin: 29rpx 0 44rpx 0;
  height: 88rpx;
  border: 1px solid rgba(229, 229, 229, 1);
  background: white;
  padding: 0 37rpx;
}

.weui-cells input {
  font-size: 13px;
  color: #888;
  border-radius: 5px;
  height: 100%;
}

.btn {
  margin-top: 60px;
  background-color: #45b7e8;
  font-weight: 400;
  color: white;
  width: 90% !important;
}

.up_images {
  font-size: 13px;
  color: #888;
}

.up_images .h3 {
  margin-bottom: 32rpx;
}

.weui-uploader__file {
  width: 204rpx;
  height: 190rpx;
  float: left;
  margin-bottom: 25rpx;
  position: relative;
}

.weui-uploader__file:nth-child(2), .weui-uploader__file:nth-child(5) {
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.weui-uploader__file image {
  width: 100%;
  height: 100%;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.weui-uploader__input-box:after, .weui-uploader__input-box:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.weui-uploader__input-box {
  background: white;
  border: 1px solid rgba(181, 181, 181, 1);
}

.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}

.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}

.weui-uploader__file .del {
  position: absolute;
  width: 47rpx;
  height: 47rpx;
  background: url(data:image/png;base64,) no-repeat center;
  border-radius: 50%;
  right: -8rpx;
  top: -8rpx;
  background-size: 100% 100%;
  z-index: 1111;
}

.overflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}