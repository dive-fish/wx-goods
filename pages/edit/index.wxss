/* pages/my/address/edit/edit.wxss */

#edit .btn {
  height: 97rpx;
  line-height: 97rpx;
  padding: 0;
  background-color: #0aa8f1;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 0;
  color: white;
  border: 0;
  margin: 0;
}
.weui-cells {
  height: 105rpx;
  border: 1px solid rgba(229, 229, 229, 1);
  background: white;
}

.weui-cell {
  padding: 0 25rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 100%;
  font-size: 14px;
  color: #444;
}
.weui-label {
  width: 196rpx;
  word-wrap: break-word;
  word-break: break-all;
  height: 100%;
}
.weui-input {
  text-align: left;
  color: #000;
  height: 100%;
}
.weui-cells {
  height: 105rpx;
  border: 1px solid rgba(229, 229, 229, 1);
  background: white;
}

picker {
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.right {
  content: "";
  position: absolute;
  right: 25rpx;
  top: 50%;
  margin-top: -5px;
  width: 10px;
  height: 10px;
  border-right: 1px solid #b2b2b2;
  border-bottom: 1px solid #b2b2b2;
  transform: rotate(-45deg);
}

.weui-agree {
  display: block;
  padding: 0.5em 15px;
  font-size: 13px;
}

.weui-agree__text {
  color: #999;
}

.weui-agree__checkbox {
  position: absolute;
  left: -9999px;
}
.weui-agree__checkbox-icon {
  position: relative;
  top: 11rpx;
  display: inline-block;
  border: 1px solid #d1d1d1;
  background-color: #fff;
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  margin-right: 5px;
}
.weui-agree__checkbox-icon icon {
  position: absolute;
  top: -3px;
  left: -3px;
  width: 35rpx;
  height: 35rpx;
}

.picker_text{
  width: 100%;
  height: 100%;
  display: block;
}